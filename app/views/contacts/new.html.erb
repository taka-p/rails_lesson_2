<% provide(:title, 'Contact Form') %>

<h1>Contact Support</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@contact) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :age %>
			<%= f.text_field :age %>

			<%= f.label :content %>
			<%= f.text_field :content %>

			<%= f.submit "Send Form", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>